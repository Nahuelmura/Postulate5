@page
@model ForgotPasswordModel
@{
    
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cambiar Contraseña</title>
</head>
<body class="color">
    <h1 class="titulo_pretacion text-center my-3">
        <i class="fa-solid fa-lock"></i> Cambiar contraseña 
        <i class="fa-solid fa-lock"></i>
    </h1>
    <h2 class="text-center my-3" style="color: white;">
        <i class="fa-solid fa-circle-exclamation"></i> Introduzca su correo electrónico con el cual se registró
    </h2>
    <hr />
    <div class="row posicion_cambio_contraseña">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-outline-light">Cambiar contraseña</button>
            </form>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>